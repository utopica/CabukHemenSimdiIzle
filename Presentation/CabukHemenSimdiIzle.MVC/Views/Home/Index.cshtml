@using CabukHemenSimdiIzle.Domain.Enums;
@model List<MovieViewModel>




@if (TempData["ToastMessage"] != null)
{
    if (TempData["ToastMessage"].ToString().Contains("Logged"))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

        <script type="text/javascript">
        toastr.success("@TempData["ToastMessage"] ")
        </script>
        
    }
    @if (TempData["ToastMessage"].ToString().Contains("GoodBye"))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

        <script type="text/javascript">toastr.warning('You Have Logged Out :(')</script>

    }
        TempData["ToastMessage"] = null;
    }




<!-- Film Cards -->
<div class="container-fluid">
    <div class="film-card-container">
        @foreach (var movie in Model)
        {
            <div class="card film-card">
                <a asp-controller="Home" asp-action="Detail" asp-route-id="@movie.Id">
                    <img src="@movie.PictureUrl" class="card-img-top" alt="@movie.Title">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
