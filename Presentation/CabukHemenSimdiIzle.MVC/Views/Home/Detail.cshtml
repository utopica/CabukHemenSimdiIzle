@model CabukHemenSimdiIzle.MVC.Models.MovieViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - Quick Watch Films</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #121212; /* Dark theme background */
            color: #fff;
        }

        .container {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .film-image {
            max-width: 100%;
            height: auto;
            border-radius: 8px; /* Yuvarlak köşeler */
        }

        .film-details {
            margin-top: 20px;
        }

        .detail-label {
            font-size: 18px;
            font-weight: bold;
        }

        .detail-value {
            font-size: 16px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.PictureUrl.Split("||").FirstOrDefault()" class="film-image" alt="@Model.Title">
            </div>
            <div class="col-md-6 film-details">
                <h2>@Model.Title</h2>
                <div class="detail-label">Description:</div>
                <div class="detail-value">@Model.Description</div>
                <div class="detail-label">Release Date:</div>
                <div class="detail-value">@Model.ReleaseDate</div>
                <div class="detail-label">Language:</div>
                <div class="detail-value">@Model.Language</div>
                <div class="detail-label">Genre:</div>
                <div class="detail-value">@Model.Genre</div>
                <div class="detail-label">IMDb Rating:</div>
                <div class="detail-value">@Model.ImdbRating</div>
                <div class="detail-label">Age Restriction:</div>
                <div class="detail-value">@Model.AgeRestriction</div>
                <div class="detail-label">Duration:</div>
                <div class="detail-value">@Model.Duration</div>
                <!-- Diğer detayları buraya ekleyebilirsiniz -->
            </div>
        </div>
        <iframe width="560" height="315" src="@Model.PictureUrl.Split("||")[1]" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
