@using CabukHemenSimdiIzle.Domain.Enums
@model CabukHemenSimdiIzle.MVC.ViewModels.AuthRegisterVM

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link rel="stylesheet" href="~/css/custom-register-style.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Eklenen kısım -->
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        #video-background {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body>

    <!-- Eklenen kısım -->
    <video id="video-background" autoplay muted loop>
        <source src="https://cdn.coverr.co/videos/coverr-popcorn-flying-from-a-box-with-a-red-background-9217/1080p.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <form asp-action="Register" asp-controller="Auth" method="post">
                    <table class="table">
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Email" />
                                    <span asp-validation-for="Email"></span> <br />
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="UserName">UserName</label>
                                    <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="UserName" />
                                    <span asp-validation-for="UserName"></span> <br />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label for="Password">Password</label>
                                    <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password" />
                                    <span asp-validation-for="Password"></span> <br />
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="FirstName">FirstName</label>
                                    <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="FirstName" />
                                    <span asp-validation-for="FirstName"></span> <br />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label for="SurName">Surname</label>
                                    <input asp-for="SurName" type="text" class="form-control" id="SurName" placeholder="Surname" />
                                    <span asp-validation-for="SurName"></span> <br />
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="BirthDate">BirthDate</label>
                                    <input asp-for="BirthDate" type="date" class="form-control" id="BirthDate" placeholder="BirthDate" />
                                    <span asp-validation-for="BirthDate"></span> <br />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="form-group">
                                    <label for="Gender">Gender</label>
                                    @{
                                        var genderSelectList = Html.GetEnumSelectList<Gender>();
                                    }
                                    <select asp-for="Gender" asp-items="genderSelectList" class="form-control" id="Gender">
                                        <option value="">Select Gender</option>
                                    </select>
                                    <div class="invalid-feedback">Gender is required.</div>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
