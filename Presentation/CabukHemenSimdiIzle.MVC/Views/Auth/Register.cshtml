@using CabukHemenSimdiIzle.Domain.Enums
@model CabukHemenSimdiIzle.MVC.ViewModels.AuthRegisterVM


<style>
    body {
        background: url('https://assets-global.website-files.com/6009ec8cda7f305645c9d91b/640776f5bf589aa0c82c42e4_movie%20poster%20design-p-1080.jpg') center/cover fixed;
        background-blur: 10px;
        background-color: black;
        color: white;
        margin: 0;
        padding: 0;
    }

    .container {
        margin-top: 50px;
    }

    form {
        background: rgba(0, 0, 0, 0.8);
        padding: 20px;
        border-radius: 10px;
    }

    label {
        color: white;
    }

    span {
        color: red;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-action="Register" asp-controller="Auth" method="post">
                <table class="table">
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Email" />
                                <span asp-validation-for="Email"></span> <br />
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label for="UserName">UserName</label>
                                <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="UserName" />
                                <span asp-validation-for="UserName"></span> <br />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password" />
                                <span asp-validation-for="Password"></span> <br />
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label for="FirstName">FirstName</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="FirstName" />
                                <span asp-validation-for="FirstName"></span> <br />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="SurName">Surname</label>
                                <input asp-for="SurName" type="text" class="form-control" id="SurName" placeholder="Surname" />
                                <span asp-validation-for="SurName"></span> <br />
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label for="BirthDate">BirthDate</label>
                                <input asp-for="BirthDate" type="date" class="form-control" id="BirthDate" placeholder="BirthDate" />
                                <span asp-validation-for="BirthDate"></span> <br />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div class="form-group">
                                <label for="Gender">Gender</label>
                                @{
                                    var genderSelectList = Html.GetEnumSelectList<Gender>();
                                }
                                <select asp-for="Gender" asp-items="genderSelectList" class="form-control" id="Gender">
                                    <option value="">Select Gender</option>
                                </select>
                                <div class="invalid-feedback">Gender is required.</div>
                            </div>
                        </td>
                    </tr>
                </table>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
</div>