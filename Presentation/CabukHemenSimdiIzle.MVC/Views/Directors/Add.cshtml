@model CabukHemenSimdiIzle.MVC.Models.PeopleViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Add Director</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/custom-styles.css" rel="stylesheet">
</head>
<body>
    <div class="custom-container">
        <h1 class="header-text">Add Director</h1>
        
                <form asp-action="Add" method="post" class="custom-form">
                    <div class="custom-form-group row">
                        <label for="firstName" class="col-sm-2 col-form-label">FirstName:</label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" type="text" class="form-control" id="firstName">
                        </div>
                    </div>

                    <div class="custom-form-group row">
                        <label for="lastName" class="col-sm-2 col-form-label">LastName:</label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" type="text" class="form-control" id="lastName">
                        </div>
                    </div>

                    <!-- Diğer görüntülemek istediğiniz özellikleri ekleyin -->

                    <div class="custom-form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-custom-primary">Save</button>
                        </div>
                    </div>
                </form>
          
    </div>
</body>
</html>
