@model CabukHemenSimdiIzle.MVC.Models.DirectorViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Add Director</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Add Director</h1>
        <hr />

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Director Information</h5>

                <form asp-action="Add" method="post">
                    <div class="form-group row">
                        <label for="firstName" class="col-sm-2 col-form-label">First Name:</label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" type="text" class="form-control" id="firstName">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lastName" class="col-sm-2 col-form-label">Last Name:</label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" type="text" class="form-control" id="lastName">
                        </div>
                    </div>

                    <!-- Add other properties you want to display -->

                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Save Director</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

