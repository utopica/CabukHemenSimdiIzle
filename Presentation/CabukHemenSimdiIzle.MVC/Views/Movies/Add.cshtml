@model CabukHemenSimdiIzle.MVC.Models.MovieViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Add Movie</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Add Movie</h1>
        <hr />

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Movie Information</h5>

                <form method="post" asp-action="Add">
                    <div class="form-group row">
                        <label for="title" class="col-sm-2 col-form-label">Title:</label>
                        <div class="col-sm-10">
                            <input asp-for="Title" type="text" class="form-control" id="title" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="description" class="col-sm-2 col-form-label">Description:</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" class="form-control" id="description" rows="3" required></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="pictureUrl" class="col-sm-2 col-form-label">Picture Url:</label>
                        <div class="col-sm-10">
                            <input asp-for="PictureUrl" type="text" class="form-control" id="pictureUrl">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="releaseDate" class="col-sm-2 col-form-label">Release Date:</label>
                        <div class="col-sm-10">
                            <input asp-for="ReleaseDate" type="int" class="form-control" id="releaseDate" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="language" class="col-sm-2 col-form-label">Language:</label>
                        <div class="col-sm-10">
                            <input asp-for="Language" type="text" class="form-control" id="language">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="genre" class="col-sm-2 col-form-label">Genre:</label>
                        <div class="col-sm-10">
                            <input asp-for="Genre" type="text" class="form-control" id="genre">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="imdbRating" class="col-sm-2 col-form-label">IMDb Rating:</label>
                        <div class="col-sm-10">
                            <input asp-for="ImdbRating" type="number" step="0.1" class="form-control" id="imdbRating">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="ageRestriction" class="col-sm-2 col-form-label">Age Restriction:</label>
                        <div class="col-sm-10">
                            <input asp-for="AgeRestriction" type="text" class="form-control" id="ageRestriction">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="duration" class="col-sm-2 col-form-label">Duration (minutes):</label>
                        <div class="col-sm-10">
                            <input asp-for="Duration" type="number" class="form-control" id="duration">
                        </div>
                    </div>

                    

                    <div class="form-group row">
                        <label for="directorIds" class="col-sm-2 col-form-label">Director IDs:</label>
                        <div class="col-sm-10">
                            <input asp-for="DirectorIds" type="text" class="form-control" id="directorIds">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="scenaristIds" class="col-sm-2 col-form-label">Scenarist IDs:</label>
                        <div class="col-sm-10">
                            <input asp-for="ScenaristIds" type="text" class="form-control" id="scenaristIds">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="castIds" class="col-sm-2 col-form-label">Cast IDs:</label>
                        <div class="col-sm-10">
                            <input asp-for="CastIds" type="text" class="form-control" id="castIds">
                        </div>
                    </div>

                   

                    <button type="submit" class="btn btn-primary">Save Movie</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
